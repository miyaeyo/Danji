<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/contentsBackroundColor"
        android:layout_marginTop="15dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/contents_image"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/contents_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:lineSpacingExtra="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/contentsBackroundColor"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageButton
            android:id="@+id/like_button"
            android:src="@drawable/ic_favorite_white_24dp"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@color/buttonColor"
            android:focusable="true"/>
        <TextView
            android:id="@+id/count_like"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/buttonColor"
            android:textColor="@color/contentsBackroundColor"
            android:textStyle="bold"
            android:layout_marginRight="10dp"/>
        <ImageButton
            android:id="@+id/inbox_button"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_inbox_white_24dp"
            android:background="@color/ColorPrimary"
            android:focusable="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">
            <TextView
                android:id="@+id/contents_reference"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/drawerColor"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/contents_reference_mark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/contents_reference_mark"
                android:gravity="center"
                android:textColor="@color/drawerColor"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>