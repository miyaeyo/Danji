<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/contentsBackroundColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/contents_image"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/contents_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/like_button"
            android:src="@drawable/ic_favorite_white_24dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/buttonColor"
            android:layout_marginRight="10dp"
            android:onClick="addLike"/>
        <TextView
            android:id="@+id/count_like"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/contents_reference"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/drawerColor"
                android:onClick="searchReference"/>
            <TextView
                android:id="@+id/contents_reference_mark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/contents_reference_mark"
                android:gravity="center"
                android:textColor="@color/drawerColor"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>